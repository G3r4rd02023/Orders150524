@page "/countries"


<h3>Paises</h3>

<div class=" mb-3">
    <a class=" btn btn-primary btn-sm " href=" /countries/create">Nuevo Pais</a>
</div>

<GenericList MyList="Countries">
    <Body>
        <table class="table table-stripped">
            <thead>
                <tr>
                    <th>País</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var country in Countries!)
                {
                    <tr>
                        <th>@country.Name</th>
                        <th>
                            <a class=" btn btn-warning btn-sm">Editar</a>
                            <button class=" btn btn-danger btn-sm">Borrar</button>
                        </th>
                    </tr>
                }
            </tbody>
        </table>
    </Body>
</GenericList>



